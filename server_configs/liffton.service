# file is stored in /etc/systemd/system/

[Unit]
Description=gunicorn daemon
After=network.target


[Service]
User=root
Group=www-data

WorkingDirectory=/home/root/Projects/Python/Django/liffton_backend

ExecStart=/home/root/Projects/Python/Django/appvenv/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/home/root/Projects/Python/Django/liffton_backend/liffton.sock \
          liffton_backend.wsgi:application

[Install]
WantedBy=multi-user.target